/* ========================= Contenido Tarjetas Kevin ========================= */

.background
	height 100vh

.background1
	background-image url("../img/city-1.jpg")

.background2
	background-image url("../img/city-2.jpg")

.background3
	background-image url("../img/city-3.jpg")

.background4
	background-image url("../img/city-4.jpg")

.background5
	background-image url("../img/city-5.jpg")

.contenido
	height 100%
	border-radius 1%
	background-color #11111E

.tarjeta
	position fixed
	top 0
	bottom 0
	left 0
	right 0



.artist
	position relative
	img
		width 100%

.redes
	position absolute
	bottom 30px
	left 50px
	i
		line-height 40px
		height 40px
		width 40px
		background-color #11111E
	a
		color #FCB932

.titulo
	font-family Montserrat
	font-size 50px
	color #FCB932

.nombre
	font-family Lato
	font-size 20px
	color #CC8E29

.descripcion
	font-family Esteban
	font-size 16px
	color #ffff
	line-height 1.5


.icono
	display inline-block
	margin-left 26px
	margin-top 1em
	text-align center

.singer
	margin-left 0

p
	font-family Esteban
	font-size 12px
	color #ffff
	margin-top 5px

.song
	margin-left 0
	background-color #C12B41
	height 70px
	width 70px

.col-md-5
	padding-left 0
	margin-left 25px
	background-color #09090F
	box-shadow 10px 32px 57px -21px rgba(0,0,0,1)


.title1
	font-family Lato
	font-size 16px
	span
		font-size 14px
		color #999999

.d-flex
	a
		display inline-flex
		text-decoration none

.carousel-indicators
	position absolute
	text-align -webkit-right
	bottom 140px
	li
		height 30px
		border-radius 50%
		transform scale(.5)

.delay-1
	animation-delay 0.4s

.delay-2
	animation-delay 0.5s

.delay-3
	animation-delay .6s

@media only screen and (min-width: 992px)
	.artist
		img
			height 100%

	.songs
		margin-bottom 3em



@media only screen and (max-width: 991px)
	.contenido
		border-radius 0

	.artist
		img
			box-shadow 10px 32px 57px -21px rgba(0,0,0,1)

	.songs
		margin-bottom 3em

	.redes2
		a
			color #ffff

	.carousel-indicators
		position fixed
		bottom 0
		background-color rgba(0,0,0,1)
		margin-bottom 0
		height 10%
		align-items center
		li
			height 30px
			border-radius 50%
			transform scale(.5)


@media only screen and (max-width: 320px)
	.investor
		margin-left 0



